.container {
  background-color: #e4e4e4;
  padding: 20rpx;
}

.story-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.story-title {
  align-items: center;
  font-size: 36rpx;
  color: rgb(92, 8, 8);
  font-weight: bold;
}

.story-content {
  font-size: 28rpx;
  color: rgb(22, 22, 22);
  margin-bottom: 25rpx;
}

.play-button {
  background-color: #f57c00;
  color: white;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border: none;
  border-radius: 5rpx;
  margin-left: auto;
}

.audio-controls {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
  padding: 10rpx;
  display: flex;
  flex-direction: column;
}

.close-bar {
  width: 100%;
  height: 20rpx;
  background-color: #ccc;
  cursor: pointer;
  margin-bottom: 10rpx;
}

.controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
